
@using GameStore.Web.App_LocalResources
@model System.Collections.Generic.List<GameStore.Bll.DTO.RoleDTO>
@{
    int counter = 1;
}

<div class="allRoles">
    <h1>@GlobalRes.Roles</h1>

    <table class="table table-bordered">
        <thead >
            <tr>
                <th scope="col">#</th>
                <th scope="col">Id</th>
                <th scope="col">@GlobalRes.Name</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var role in Model)
            {

                <tr>
                    <th scope="row">@counter</th>
                    <td>@role.Id </td>
                    <td> @role.Name </td>
                    @{ counter++;}
                </tr>
            }
        </tbody>
    </table>

    <div style="margin-top: 50px">
        @Html.ActionLink(@GlobalRes.New, "NewRole", "Role", new { }, new { @class = "btn btn-primary" })
    </div>
</div>