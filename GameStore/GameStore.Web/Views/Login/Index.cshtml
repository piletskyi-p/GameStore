@using GameStore.Web.App_LocalResources
@model GameStore.Web.Models.ViewModels.LoginView
@{
    ViewBag.Title = "Вход";
}

<div class ="login">
    <h2>@GlobalRes.LogIn</h2>
    @using (Html.BeginForm("Index", "Login", FormMethod.Post, new { }))
    {
        <div class="form-group">
            <label>@GlobalRes.Email </label>
            @Html.TextBox(@GlobalRes.Email, Model.Email, new { @class = "form-control", @id = "exampleInputEmail1", placeholder = @GlobalRes.Email })
            <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small> <br />
            @Html.ValidationMessage("Email")
        </div>
        <div class="form-group">
            <label>@GlobalRes.Password</label>
            @Html.PasswordFor(model => model.Password, new { @class = "form-control", placeholder = @GlobalRes.Password, @id = "InputPassword1" })
            @Html.ValidationMessage("Password")
        </div>
        <div class="form-group form-check">
            @Html.CheckBoxFor(model => model.IsPersistent, new { id = "Check1" })
            <label for="Check1" class="form-check-label">@GlobalRes.IsPersistent</label>
        </div>
        <button type="submit" class="btn btn-success">@GlobalRes.Submit</button>
    }
</div>