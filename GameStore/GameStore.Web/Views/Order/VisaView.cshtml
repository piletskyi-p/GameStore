@using GameStore.Web.App_LocalResources
<style>
    .pay {
        width: 25%;
        height: 250px;
        background-color: #B0E0E6;
        border: 4px solid #5F9EA0;
        border-radius: 5px;
        text-align: center;
    }
</style>

<div style="padding: 20px;">
    @using (Html.BeginForm("PayVisa", "Order"))
    {
        <div class="form-group">
            <label for="Input1"> @GlobalRes.СardNumber</label>
            <input type="text" class="form-control" id="Input1" name="login" 
                   size="30"  required="required" pattern="[0-9]{16}" placeholder="Enter card number">
        </div>
        <div class="form-group">
            <label for="Input2">  @GlobalRes.Validity</label>
            <input type="number" class="form-control" id="Input2" min="0" max="18" step="1" size="1"
                   required="required" pattern="[0-9]{16}" placeholder="X X">
            <input type="number" class="form-control" id="Input2" name="num2" min="18" max="99" step="1" size="1"
                   required="required" pattern="[0-9]{16}" placeholder="X X">
        </div>
        <div class="form-group">
            <label for="Input3">  CVV2:</label>
            <input type="text" class="form-control" id="Input3" name="login" 
                   size="1"  required="required"  pattern="[0-9]{3}" placeholder="X X X">
        </div>
        <input type="submit" class="btn btn-success" value="@GlobalRes.Pay" />
    }

</div>